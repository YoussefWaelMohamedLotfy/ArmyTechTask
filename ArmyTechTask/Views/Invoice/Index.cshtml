@model InvoiceIndexVM
@{
    ViewData["Title"] = "Index";
}

<div class="p-1">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Invoices (From Db View)</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Invoice Date
                </th>
                <th>
                    Cashier ID
                </th>
                <th>
                    Branch ID
                </th>
                <th>
                    Invoice Total
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model.Invoices)
            {
                <tr>
                    <td width="10%">
                        @invoice.Id
                    </td>
                    <td width="20%">
                        @invoice.CustomerName
                    </td>
                    <td width="30%">
                        @invoice.Invoicedate
                    </td>
                    <td width="10%">
                        @invoice.CashierId
                    </td>
                    <td width="10%">
                        @invoice.BranchId
                    </td>
                    <td width="10%">
                        @*@invoice.InvoiceTotal*@
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-action="DetailsEdit" asp-route-id="@invoice.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
