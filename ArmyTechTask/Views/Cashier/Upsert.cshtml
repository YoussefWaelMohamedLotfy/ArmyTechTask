@model CashierUpsertVM
@{
    ViewData["Title"] = "Add Cashier";
}

<form method="post" asp-action="Upsert">
    @if (Model.Cashier.Id != 0)
    {
        ViewData["Title"] = "Edit Cashier";
        <input asp-for="Cashier.Id" hidden />
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@ViewData["Title"]</h2>
        </div>
        <div class="col-8">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Cashier.CashierName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cashier.CashierName" class="form-control" />
                    <span asp-validation-for="Cashier.CashierName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Cashier.BranchId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Cashier.BranchId" asp-items="@Model.BranchSelectList" class="form-select">
                        <option disabled selected>--Select Branch--</option>
                    </select>
                    <span asp-validation-for="Cashier.BranchId" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row py-2">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        @if (Model.Cashier.Id != 0)
                        {
                            // Update
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        }
                        else
                        {
                            // Create
                            <input type="submit" class="btn btn-primary w-100" value="Create" />
                        }

                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary w-100"><i class="bi bi-box-arrow-left"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
